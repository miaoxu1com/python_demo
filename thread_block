import threading
import time


def worker():
    print("Worker thread started.")
    time.sleep(2)
    print("Worker thread finished.")


thread = threading.Thread(target=worker)
# 启动线程
thread.start()
# 阻塞主线程等待子线程，不加就不阻塞
thread.join()
while True:
    time.sleep(1)
    print("Main thread finished.")


